<%- include('header') %>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-plus me-2"></i>Create New Support Ticket
                </h5>
            </div>
            <div class="card-body">
                <form method="POST" action="/tickets/new" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label for="title" class="form-label">Ticket Title *</label>
                                <input type="text" class="form-control" id="title" name="title" required 
                                       placeholder="Brief description of the issue">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="priority" class="form-label">Priority *</label>
                                <select class="form-select" id="priority" name="priority" required>
                                    <option value="">Select Priority</option>
                                    <option value="Low">Low - General inquiry</option>
                                    <option value="Medium">Medium - Standard issue</option>
                                    <option value="High">High - Urgent problem</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="category" class="form-label">Category *</label>
                        <select class="form-select" id="category" name="category" required>
                            <option value="">Select Category</option>
                            <option value="Hardware">Hardware - Computer, printer, monitor issues</option>
                            <option value="Software">Software - Application problems</option>
                            <option value="Network">Network - Internet, WiFi, connectivity</option>
                            <option value="Email">Email - Email client and configuration</option>
                            <option value="Security">Security - Antivirus, malware, suspicious activity</option>
                            <option value="Account">Account - Login, password, permissions</option>
                            <option value="Other">Other - General support request</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Detailed Description *</label>
                        <textarea class="form-control" id="description" name="description" rows="6" required
                                  placeholder="Please provide a detailed description of the issue, including:&#10;- What were you doing when the problem occurred?&#10;- What error messages did you see?&#10;- Have you tried any troubleshooting steps?&#10;- When did this issue start?"></textarea>
                    </div>

                    <div class="mb-4">
                        <label for="attachments" class="form-label">Attachments (Optional)</label>
                        <input type="file" class="form-control" id="attachments" name="attachments" multiple
                               accept=".jpg,.jpeg,.png,.gif,.pdf,.txt">
                        <div class="form-text">
                            You can attach screenshots, error logs, or relevant documents. Max 10MB per file.
                            Supported formats: JPG, PNG, GIF, PDF, TXT
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>What happens next?</strong>
                        <ul class="mb-0 mt-2">
                            <li>Your ticket will be automatically assigned to our technical support team</li>
                            <li>You'll receive email notifications for any updates</li>
                            <li>High priority tickets are typically responded to within 15 minutes</li>
                            <li>You can track progress and add comments in your dashboard</li>
                        </ul>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="/dashboard" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-paper-plane me-2"></i>Submit Ticket
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-lightbulb me-2"></i>Before Creating a Ticket
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6>Common Solutions</h6>
                        <ul class="list-unstyled">
                            <li><i class="fas fa-check text-success me-2"></i>Restart your computer</li>
                            <li><i class="fas fa-check text-success me-2"></i>Check all cable connections</li>
                            <li><i class="fas fa-check text-success me-2"></i>Update your software</li>
                            <li><i class="fas fa-check text-success me-2"></i>Clear browser cache</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h6>Need Immediate Help?</h6>
                        <p class="mb-2">
                            <strong>Emergency Support:</strong><br>
                            <i class="fas fa-phone text-success me-1"></i> +1-800-TECH-HELP<br>
                            <i class="fas fa-envelope text-primary me-1"></i> urgent@techsupport.com
                        </p>
                        <a href="/knowledge-base" class="btn btn-sm btn-outline-info">
                            <i class="fas fa-book me-1"></i>Browse Knowledge Base
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('footer') %>
