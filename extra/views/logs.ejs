<%- include('header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>
        <i class="fas fa-file-alt me-2"></i>System Logs
    </h2>
    <div class="btn-group">
        <button class="btn btn-outline-secondary btn-sm" onclick="refreshLogs()">
            <i class="fas fa-sync-alt me-1"></i>Refresh
        </button>
        <button class="btn btn-outline-primary btn-sm" onclick="downloadLogs()">
            <i class="fas fa-download me-1"></i>Download
        </button>
    </div>
</div>

<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <h6 class="mb-0">
                            <i class="fas fa-filter me-2"></i>Log File Selection
                        </h6>
                    </div>
                    <div class="col-md-6">
                        <form method="GET" action="/admin/logs" class="d-flex">
                            <select name="file" class="form-select form-select-sm me-2" onchange="this.form.submit()">
                                <option value="system.log" <% if (logFile === 'system.log') { %>selected<% } %>>System Logs</option>
                                <option value="error.log" <% if (logFile === 'error.log') { %>selected<% } %>>Error Logs</option>
                                <option value="access.log" <% if (logFile === 'access.log') { %>selected<% } %>>Access Logs</option>
                                <option value="debug.log" <% if (logFile === 'debug.log') { %>selected<% } %>>Debug Logs</option>
                                <option value="security.log" <% if (logFile === 'security.log') { %>selected<% } %>>Security Logs</option>
                            </select>
                            <input type="text" name="file" class="form-control form-control-sm" 
                                   placeholder="Custom log file..." value="<%= logFile %>">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-9">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="mb-0">
                    <i class="fas fa-file me-2"></i>
                    Current Log: <code><%= logFile %></code>
                </h6>
                <div class="text-muted small">
                    Last updated: <%= moment().format('YYYY-MM-DD HH:mm:ss') %>
                </div>
            </div>
            <div class="card-body">
                <div class="log-container">
                    <pre class="log-content"><%= logContent %></pre>
                </div>
                
                <div class="mt-3 d-flex justify-content-between align-items-center">
                    <div class="text-muted small">
                        <i class="fas fa-info-circle me-1"></i>
                        Log entries are displayed in chronological order (newest first)
                    </div>
                    <div>
                        <button class="btn btn-sm btn-outline-secondary" onclick="copyLogs()">
                            <i class="fas fa-copy me-1"></i>Copy to Clipboard
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card mb-3">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-chart-line me-2"></i>Log Statistics
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <small class="text-muted">Total Lines</small>
                    <div class="h5"><%= logContent.split('\n').length %></div>
                </div>
                <div class="mb-3">
                    <small class="text-muted">File Size</small>
                    <div class="h6"><%= Math.round(logContent.length / 1024 * 100) / 100 %> KB</div>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Error Count</small>
                    <div class="h6 text-danger"><%= (logContent.match(/ERROR/g) || []).length %></div>
                </div>
                <div class="mb-0">
                    <small class="text-muted">Warning Count</small>
                    <div class="h6 text-warning"><%= (logContent.match(/WARN/g) || []).length %></div>
                </div>
            </div>
        </div>
        
        <div class="card mb-3">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-search me-2"></i>Log Analysis
                </h6>
            </div>
            <div class="card-body">
                <div class="input-group mb-2">
                    <input type="text" class="form-control form-control-sm" 
                           placeholder="Search logs..." id="logSearch">
                    <button class="btn btn-outline-secondary btn-sm" onclick="searchLogs()">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
                
                <div class="d-grid gap-2">
                    <button class="btn btn-sm btn-outline-danger" onclick="filterLogs('ERROR')">
                        Show Errors Only
                    </button>
                    <button class="btn btn-sm btn-outline-warning" onclick="filterLogs('WARN')">
                        Show Warnings Only
                    </button>
                    <button class="btn btn-sm btn-outline-info" onclick="filterLogs('INFO')">
                        Show Info Only
                    </button>
                    <button class="btn btn-sm btn-outline-secondary" onclick="clearFilter()">
                        Clear Filter
                    </button>
                </div>
            </div>
        </div>
        
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-history me-2"></i>Recent Files
                </h6>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <a href="?file=system.log" class="list-group-item list-group-item-action border-0 px-0">
                        <i class="fas fa-file-alt me-2"></i>system.log
                    </a>
                    <a href="?file=error.log" class="list-group-item list-group-item-action border-0 px-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>error.log
                    </a>
                    <a href="?file=access.log" class="list-group-item list-group-item-action border-0 px-0">
                        <i class="fas fa-globe me-2"></i>access.log
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.log-container {
    background-color: #1e1e1e;
    border-radius: 5px;
    max-height: 500px;
    overflow-y: auto;
    padding: 15px;
}

.log-content {
    color: #d4d4d4;
    font-family: 'Courier New', Consolas, monospace;
    font-size: 12px;
    line-height: 1.4;
    margin: 0;
    white-space: pre-wrap;
    word-wrap: break-word;
}

.log-content::-webkit-scrollbar {
    width: 8px;
}

.log-content::-webkit-scrollbar-track {
    background: #2d2d2d;
}

.log-content::-webkit-scrollbar-thumb {
    background: #555;
    border-radius: 4px;
}

.log-content::-webkit-scrollbar-thumb:hover {
    background: #666;
}

.highlight {
    background-color: yellow;
    color: black;
}
</style>

<script>
let originalLogContent = '';

document.addEventListener('DOMContentLoaded', function() {
    originalLogContent = document.querySelector('.log-content').textContent;
});

function refreshLogs() {
    window.location.reload();
}

function downloadLogs() {
    const logContent = document.querySelector('.log-content').textContent;
    const blob = new Blob([logContent], { type: 'text/plain' });
    const url = window.URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = '<%= logFile %>';
    document.body.appendChild(a);
    a.click();
    document.body.removeChild(a);
    window.URL.revokeObjectURL(url);
}

function copyLogs() {
    const logContent = document.querySelector('.log-content').textContent;
    navigator.clipboard.writeText(logContent).then(function() {
        alert('Log content copied to clipboard!');
    }).catch(function(err) {
        console.error('Failed to copy: ', err);
    });
}

function searchLogs() {
    const searchTerm = document.getElementById('logSearch').value;
    const logElement = document.querySelector('.log-content');
    
    if (!searchTerm) {
        logElement.innerHTML = originalLogContent;
        return;
    }
    
    const regex = new RegExp(`(${searchTerm})`, 'gi');
    const highlightedContent = originalLogContent.replace(regex, '<span class="highlight">$1</span>');
    logElement.innerHTML = highlightedContent;
}

function filterLogs(level) {
    const logElement = document.querySelector('.log-content');
    const lines = originalLogContent.split('\n');
    const filteredLines = lines.filter(line => line.includes(level));
    logElement.textContent = filteredLines.join('\n');
}

function clearFilter() {
    const logElement = document.querySelector('.log-content');
    logElement.textContent = originalLogContent;
    document.getElementById('logSearch').value = '';
}

// Auto-refresh logs every 30 seconds
setInterval(function() {
    if (document.querySelector('#autoRefresh') && document.querySelector('#autoRefresh').checked) {
        refreshLogs();
    }
}, 30000);
</script>

<%- include('footer') %>
