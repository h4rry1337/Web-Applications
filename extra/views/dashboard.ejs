<%- include('header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>
        <i class="fas fa-tachometer-alt me-2"></i>
        Support Dashboard
    </h2>
    <a href="/tickets/new" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>New Ticket
    </a>
</div>

<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="card bg-gradient-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6>My Tickets</h6>
                        <h3><%= tickets.length %></h3>
                    </div>
                    <i class="fas fa-ticket-alt fa-2x opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-gradient-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6>Open</h6>
                        <h3><%= tickets.filter(t => t.status === 'Open').length %></h3>
                    </div>
                    <i class="fas fa-exclamation-circle fa-2x opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-gradient-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6>In Progress</h6>
                        <h3><%= tickets.filter(t => t.status === 'In Progress').length %></h3>
                    </div>
                    <i class="fas fa-spinner fa-2x opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-gradient-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6>Resolved</h6>
                        <h3><%= tickets.filter(t => t.status === 'Resolved').length %></h3>
                    </div>
                    <i class="fas fa-check-circle fa-2x opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="fas fa-list me-2"></i>Recent Tickets
        </h5>
        <div class="btn-group btn-group-sm" role="group">
            <input type="radio" class="btn-check" name="statusFilter" id="all" autocomplete="off" checked>
            <label class="btn btn-outline-secondary" for="all">All</label>
            
            <input type="radio" class="btn-check" name="statusFilter" id="open" autocomplete="off">
            <label class="btn btn-outline-warning" for="open">Open</label>
            
            <input type="radio" class="btn-check" name="statusFilter" id="progress" autocomplete="off">
            <label class="btn btn-outline-primary" for="progress">In Progress</label>
            
            <input type="radio" class="btn-check" name="statusFilter" id="resolved" autocomplete="off">
            <label class="btn btn-outline-success" for="resolved">Resolved</label>
        </div>
    </div>
    <div class="card-body">
        <% if (tickets.length === 0) { %>
            <div class="text-center py-5">
                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No tickets found</h5>
                <p class="text-muted">Create your first support ticket to get started.</p>
                <a href="/tickets/new" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Create Ticket
                </a>
            </div>
        <% } else { %>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Ticket ID</th>
                            <th>Title</th>
                            <th>Category</th>
                            <th>Priority</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Updated</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% tickets.forEach(ticket => { %>
                            <tr data-status="<%= ticket.status %>">
                                <td>
                                    <span class="badge bg-secondary"><%= ticket.id %></span>
                                </td>
                                <td>
                                    <strong><%= ticket.title %></strong>
                                    <% if (ticket.comments.length > 0) { %>
                                        <i class="fas fa-comment text-primary ms-1" title="Has comments"></i>
                                    <% } %>
                                    <% if (ticket.attachments.length > 0) { %>
                                        <i class="fas fa-paperclip text-info ms-1" title="Has attachments"></i>
                                    <% } %>
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark"><%= ticket.category %></span>
                                </td>
                                <td>
                                    <% if (ticket.priority === 'High') { %>
                                        <span class="badge bg-danger">High</span>
                                    <% } else if (ticket.priority === 'Medium') { %>
                                        <span class="badge bg-warning">Medium</span>
                                    <% } else { %>
                                        <span class="badge bg-info">Low</span>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (ticket.status === 'Open') { %>
                                        <span class="badge bg-warning">Open</span>
                                    <% } else if (ticket.status === 'In Progress') { %>
                                        <span class="badge bg-primary">In Progress</span>
                                    <% } else if (ticket.status === 'Resolved') { %>
                                        <span class="badge bg-success">Resolved</span>
                                    <% } else { %>
                                        <span class="badge bg-secondary"><%= ticket.status %></span>
                                    <% } %>
                                </td>
                                <td>
                                    <small class="text-muted">
                                        <%= moment(ticket.created_at).format('MMM DD, YYYY') %><br>
                                        <%= moment(ticket.created_at).format('HH:mm') %>
                                    </small>
                                </td>
                                <td>
                                    <small class="text-muted">
                                        <%= moment(ticket.updated_at).fromNow() %>
                                    </small>
                                </td>
                                <td>
                                    <a href="/tickets/<%= ticket.id %>" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye me-1"></i>View
                                    </a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } %>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const statusFilters = document.querySelectorAll('input[name="statusFilter"]');
    const tableRows = document.querySelectorAll('tbody tr[data-status]');
    
    statusFilters.forEach(filter => {
        filter.addEventListener('change', function() {
            const selectedStatus = this.id;
            
            tableRows.forEach(row => {
                const rowStatus = row.getAttribute('data-status');
                
                if (selectedStatus === 'all') {
                    row.style.display = '';
                } else if (selectedStatus === 'open' && rowStatus === 'Open') {
                    row.style.display = '';
                } else if (selectedStatus === 'progress' && rowStatus === 'In Progress') {
                    row.style.display = '';
                } else if (selectedStatus === 'resolved' && rowStatus === 'Resolved') {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });
    });
});
</script>

<%- include('footer') %>
