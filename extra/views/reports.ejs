<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Daily Chart
    const dailyCtx = document.getElementById('dailyChart').getContext('2d');
    const dailyData = <%- JSON.stringify(reportData.dailyStats) %>;
    
    new Chart(dailyCtx, {
        type: 'line',
        data: {
            labels: dailyData.map(d => moment(d.date).format('MMM DD')),
            datasets: [{
                label: 'Tickets Created',
                data: dailyData.map(d => d.count),
                borderColor: 'rgb(54, 162, 235)',
                backgroundColor: 'rgba(54, 162, 235, 0.1)',
                tension: 0.4,
                fill: true
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        stepSize: 1
                    }
                }
            }
        }
    });
    
    // Status Chart
    const statusCtx = document.getElementById('statusChart').getContext('2d');
    const statusData = <%- JSON.stringify(reportData.ticketsByStatus) %>;
    
    new Chart(statusCtx, {
        type: 'doughnut',
        data: {
            labels: Object.keys(statusData),
            datasets: [{
                data: Object.values(statusData),
                backgroundColor: [
                    '#ffc107',
                    '#0d6efd',
                    '#198754',
                    '#6c757d'
                ]
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'bottom'
                }
            }
        }
    });
    
    // Period buttons
    const periodButtons = document.querySelectorAll('[data-period]');
    periodButtons.forEach(button => {
        button.addEventListener('click', function() {
            periodButtons.forEach(b => b.classList.remove('active'));
            this.classList.add('active');
            
            console.log('Loading data for period:', this.getAttribute('data-period'));
        });
    });
});


// Function to preview date formats
async function previewDateFormats() {
    const locale = document.getElementById('previewLocale').value;
    const resultsDiv = document.getElementById('datePreviewResults');
    
    try {
        resultsDiv.innerHTML = '<p class="text-muted mb-0"><i class="fas fa-spinner fa-spin me-2"></i>Loading preview...</p>';
        
        const response = await fetch(`/admin/date-preview?locale=${locale}`);
        const data = await response.json();
        
        if (data.error) {
            resultsDiv.innerHTML = `<p class="text-danger mb-0">Error: ${data.message}</p>`;
            return;
        }
        
        let html = `
            <div class="row">
                <div class="col-md-6">
                    <h6>Date Examples:</h6>
                    <ul class="list-unstyled">
        `;
        
        data.examples.forEach(example => {
            html += `
                <li><strong>Now:</strong> ${example.localized}</li>
                <li><strong>Relative:</strong> ${example.relative}</li>
            `;
        });
        
        html += `
                    </ul>
                </div>
                <div class="col-md-6">
                    <h6>Format Configuration:</h6>
                    <small class="text-muted">Source: ${data.formats.source}</small>
                    <pre class="bg-dark text-light p-2 rounded mt-2" style="font-size: 0.8rem; max-height: 200px; overflow-y: auto;">${data.formats.fullFile}</pre>
                </div>
            </div>
        `;
        
        resultsDiv.innerHTML = html;
        
    } catch (error) {
        resultsDiv.innerHTML = `<p class="text-danger mb-0">Network error: ${error.message}</p>`;
    }
}
</script>

