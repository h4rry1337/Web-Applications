<div class="row g-4 mb-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-tags me-2"></i>Tickets by Category
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Category</th>
                                <th class="text-end">Count</th>
                                <th class="text-end">Percentage</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% 
                            const totalTickets = Object.values(reportData.ticketsByCategory).reduce((a, b) => a + b, 0);
                            Object.entries(reportData.ticketsByCategory).forEach(([category, count]) => { 
                            %>
                                <tr>
                                    <td>
                                        <span class="badge bg-light text-dark"><%= category %></span>
                                    </td>
                                    <td class="text-end"><%= count %></td>
                                    <td class="text-end"><%= Math.round((count / totalTickets) * 100) %>%</td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>Tickets by Priority
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Priority</th>
                                <th class="text-end">Count</th>
                                <th class="text-end">Percentage</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% 
                            const totalPriorityTickets = Object.values(reportData.ticketsByPriority).reduce((a, b) => a + b, 0);
                            Object.entries(reportData.ticketsByPriority).forEach(([priority, count]) => { 
                            %>
                                <tr>
                                    <td>
                                        <% if (priority === 'High') { %>
                                            <span class="badge bg-danger">High</span>
                                        <% } else if (priority === 'Medium') { %>
                                            <span class="badge bg-warning">Medium</span>
                                        <% } else { %>
                                            <span class="badge bg-info">Low</span>
                                        <% } %>
                                    </td>
                                    <td class="text-end"><%= count %></td>
                                    <td class="text-end"><%= Math.round((count / totalPriorityTickets) * 100) %>%</td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

